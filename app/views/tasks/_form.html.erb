<div class="container padded">
  <h1 class="text-center">New task</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @task do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :details %>
          <%= f.text_field :details, class: "form-control" %>
        </div>
        <%= f.submit "Create task", class: "btn btn-primary" %>
        <%= link_to "Back to list", tasks_path, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
