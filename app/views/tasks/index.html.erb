<div class="container">
  <h1 class="text-center">My tasks</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <ol class="list-unstyled">
        <% @tasks.each do |task| %>
          <li><%= link_to task.title, task_path(task) %>
            <% if task.completed %>
              <i class="fa fa-check-square-o" aria-hidden="true"></i>
            <% else %>
              <i class="fa fa-square-o" aria-hidden="false"></i>
            <% end %>
          </li>
        <% end %>
      </ol>
    </div>
  </div>
  <h4 class="text-center"><%= link_to "Create a new task", new_task_path, class: "btn btn-primary" %></h4>
</div>
