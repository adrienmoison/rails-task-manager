<div class="container">
  <h1 class="text-center"><%= @task.title %></h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <p class="description"><%= @task.details %></p>
      <%= link_to "Back to list", tasks_path, class: "btn btn-primary" %>
      <%= link_to "Delete", task_path(@task), method: :delete, class: "btn btn-primary" %>
      <%= link_to "Edit this task", edit_task_path(@task), class: "btn btn-primary" %>
    </div>
  </div>
</div>
